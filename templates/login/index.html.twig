{% extends 'base.html.twig' %}

{% block body %}
	<div class="container my-5">
		<h1>
			Connexion</h1>

		{% if error %}
			<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		<form action="{{ path('app_login') }}" method="post">
			<label for="username">Email:</label>
			<input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" required>

			<label for="password">Password:</label>
			<input type="password" class="form-control" id="password" name="_password" required>

			<input type="hidden" name="_target_path" value="{{ path('app_account') }}">

			<button type="submit" class="btn btn-primary">login</button>
		</form>

		<br>
		Vous n'avez pas de compte ? <a href="{{ path('app_register') }}">Cr√©er un compte</a>
	</div>
{% endblock %}

